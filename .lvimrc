let g:coeuvre_project_root = g:localvimrc_script_dir

if WINDOWS()
    let &makeprg = 'cd ' . g:coeuvre_project_root . ' && build.bat'
    nnoremap <silent> <leader>br :execute '!cd ' . g:coeuvre_project_root . ' && run.bat'<cr>
else
    let &makeprg = 'cd ' . g:coeuvre_project_root . ' && clear && ./build.sh'
    nnoremap <silent> <leader>br :VimuxRunCommand("cd " . g:coeuvre_project_root . g:coeuvre_shell_cmd_and . "clear" . g:coeuvre_shell_cmd_and . "./run.sh")<cr>
endif

nnoremap <silent> <leader>bb :make <cr><cr><cr>
