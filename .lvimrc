let g:coeuvre_project_root = g:localvimrc_script_dir

if WINDOWS()
    let s:build_script = "build.bat"
    let s:run_script = "run.bat"
else
    let s:build_script = "./build.sh"
    let s:run_script = "./run.sh"
endif

let &makeprg = 'cd ' . g:coeuvre_project_root . ' && ' . s:build_script
let g:coeuvre_project_run_cmd = '!cd ' . g:coeuvre_project_root . '&& ' . s:run_script
nnoremap <silent> <leader>bb :make <cr>
nnoremap <silent> <leader>br :execute g:coeuvre_project_run_cmd<cr>
